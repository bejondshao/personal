    <!-- Add packages here -->

    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index" />

        <global-results>
            <result name="error">/WEB-INF/jsp/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>

        <action name="action1" class="com.bejond.action.Action1">
            <result>
                /action1.jsp
            </result>
        </action>
        <action name="action2" class="com.bejond.action.IndexAction2">
            <result>
                /action2.jsp
            </result>
        </action>
        <action name="action3" class="com.bejond.action.IndexAction3">
            <result>
                /action3.jsp
            </result>
        </action>

        <action name="address*" class="com.bejond.action.Address" method="{1}">
            <result name="{1}Success">
                /{1}Success.jsp
            </result>
        </action>
        <action name="*_*" class="com.bejond.action.{1}" method="{2}">
            <result name="{2}Success">
                /{1}_{2}_success.jsp
            </result>
        </action>
        <action name="*_*" class="com.bejond.action.{1}Action" method="{2}{1}">
            <result name="{2}{1}Success">
                /{2}_{1}_success.jsp
            </result>
            <result name="{2}{1}Error">
                /{2}_{1}_error.jsp
            </result>
        </action>

    </package>




    <package name="path" extends="struts-default" namespace="/">
        <action name="path" class="com.bejond.action.Path">
            <result name="path">/path.jsp</result>
        </action>
    </package>

    <package name="login" extends="struts-default" namespace="/login">
        <action name="login1" class="com.bejond.action.LoginAction1">
            <result name="success">/login1.jsp</result>
        </action>
        <action name="login2" class="com.bejond.action.LoginAction2">
            <result name="success">/login1.jsp</result>
        </action>
        <action name="login*" class="com.bejond.action.LoginAction{1}">
            <result>/login1.jsp</result>
        </action>
    </package>

    <constant name="struts.devMode" value="true" />
</struts>
